      "/api/v1/ai-scan": {
        "post": {
          "summary": "AI-Powered Smart Contract Scan",
          "description": "Uploads a Solidity smart contract, analyzes it using an AI model via OpenRouter, and returns a report in Markdown format. Requires valid API key authentication.",
          "security": [
            {
              "ApiKeyAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "multipart/form-data": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "file": {
                      "type": "string",
                      "format": "binary",
                      "description": "Solidity smart contract file (.sol) to be analyzed."
                    },
                    "openrouterApiKey": {
                      "type": "string",
                      "description": "API key for accessing OpenRouter."
                    },
                    "model": {
                      "type": "string",
                      "description": "The AI model to use for analysis (e.g., 'google/gemini-2.0-pro-exp-02-05:free')."
                    }
                  },
                  "required": [
                    "file",
                    "openrouterApiKey",
                    "model"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
                "description": "Scan successful. Returns analysis results.",
                "content": {
                    "application/json": {
                    "schema": {
                        "type": "object",
                        "properties": {
                        "success": {
                            "type": "boolean",
                            "example": true
                        },
                        "message": {
                            "type": "string",
                            "example": "Analysis completed successfully."
                        },
                        "timeTaken": {
                            "type": "string",
                            "example": "12873.76 milliseconds"
                        },
                        "results": {
                            "type": "object",
                            "description": "Detailed analysis results."
                        },
                        "outputFile": {
                            "type": "string",
                            "example": "analysis_results_2025-03-04T03-42-57-890Z.md"
                        }
                        }
                    }
                    }
                }
            },
            "400": {
              "description": "Bad Request. Indicates missing or invalid request parameters.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "File, API key, and model are required."
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized - API key required or invalid",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "API key is required. Please provide X-API-Key header."
                      }
                    }
                  }
                }
              }
            },
            "403": {
              "description": "Forbidden - Invalid or expired API key",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Invalid or expired API key"
                      }
                    }
                  }
                }
              }
            },
            "429": {
              "description": "Too Many Requests. Indicates that the rate limit has been exceeded.",
              "content": {
                "application/json": {
                  "schema": {
                      "type": "object",
                      "properties": {
                        "error": {
                          "type": "string",
                           "example": "API rate limit exceeded"
                        }
                      }
                  }
                }
              }
            },
            "500": {
              "description": "Internal Server Error. Indicates an error during processing.",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": {
